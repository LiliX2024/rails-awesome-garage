  <div class="row justify-content-center">
    <div class="col-12">
      <div class="container mt-3">

        <h2>Find Your Favourite Cars</h2>
        <div class="cards">
          <% @cars.each do |car| %>
            <div class="card-car">

              <%= link_to car_path(car) do %>
                <%= image_tag car.image_url %>
              <% end %>

              <div class="card-car-infos">

                <div>
                  <h2><%= car.brand %></h2>
                  <%= car.model %>
                  <%= car.year %>
                  <%= car.fuel %>
                  <h2>Owner:</h2> <%= car.owner.nickname %>
                </div>

                <h2 class="card-car-pricing">Price</h2>
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/sarahlafer", class: "card-car-owner avatar-bordered", alt: "avatar-bordered" %>

              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
